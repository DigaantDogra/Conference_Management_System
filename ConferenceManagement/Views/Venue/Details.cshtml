@model ConferenceManagement.Models.Venue
@{
    ViewData["Title"] = "Venue Details";
}

<div class="container mt-4">
    <h1>Venue Details</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Address</h5>
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Capacity</dt>
                        <dd class="col-sm-8">@Model.Capacity people</dd>

                        <dt class="col-sm-4">Layout</dt>
                        <dd class="col-sm-8">@Model.Layout</dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">@(Model.IsOnline ? "Online" : "Physical")</dd>

                        <dt class="col-sm-4">Facilities</dt>
                        <dd class="col-sm-8">@Model.Facilities</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>