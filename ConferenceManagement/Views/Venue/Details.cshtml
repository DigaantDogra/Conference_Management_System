@model ConferenceManagement.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<div class="container">
    <h1 class="mb-4">Venue Details</h1>

    <div class="card">
        <div class="card-body">
            <h2 class="card-title">@Model.Address</h2>
            <p class="card-text">@Model.Facilities</p>

            <dl class="row">
                <dt class="col-sm-3">Layout</dt>
                <dd class="col-sm-9">@Model.Layout</dd>

                <dt class="col-sm-3">Capacity</dt>
                <dd class="col-sm-9">@Model.Capacity</dd>

                <dt class="col-sm-3">Venue Type</dt>
                <dd class="col-sm-9">@(Model.IsOnline ? "Virtual Venue" : "Physical Venue")</dd>
            </dl>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>