@model ConferenceManagement.Models.Venue
@{
    ViewData["Title"] = "Create New Venue";
}

<div class="container mt-4">
    <h1>Create New Venue</h1>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">Address</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Capacity" class="form-label">Capacity</label>
            <input asp-for="Capacity" class="form-control" type="number" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Facilities" class="form-label">Facilities</label>
            <textarea asp-for="Facilities" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Facilities" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Layout" class="form-label">Layout</label>
            <select asp-for="Layout" class="form-control">
                <option value="Small">Small</option>
                <option value="Medium">Medium</option>
                <option value="Large">Large</option>
            </select>
            <span asp-validation-for="Layout" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="IsOnline" class="form-check-input" type="checkbox" />
            <label asp-for="IsOnline" class="form-check-label">Is Online Venue?</label>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}