@model IEnumerable<ConferenceManagement.Models.Venue>
@{
    ViewData["Title"] = "Venues";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Venues</h1>
        <a asp-action="Create" class="btn btn-primary">Add New Venue</a>
    </div>

    <div class="row">
        @foreach (var venue in Model)

        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@venue.Address</h5>
                        <ul class="list-unstyled">
                            <li><strong>Capacity:</strong> @venue.Capacity people</li>
                            <li><strong>Layout:</strong> @venue.Layout</li>
                            <li><strong>Type:</strong> @(venue.IsOnline ? "Online" : "Physical")</li>
                        </ul>
                        <p class="card-text"><strong>Facilities:</strong> @venue.Facilities</p>
                        <a asp-action="Details" asp-route-id="@venue.Id" class="btn btn-info">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>