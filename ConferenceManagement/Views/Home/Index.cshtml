@model ConferenceManagement.Models.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="position-relative overflow-hidden p-3 p-md-5 text-center bg-primary bg-gradient text-white">
    <div class="col-md-8 p-lg-5 mx-auto my-5">
        <h1 class="display-4 fw-bold">Welcome to Conference Management</h1>
        <p class="lead fw-normal">Discover, Connect, and Learn at Premier Industry Events</p>
        <a class="btn btn-outline-light btn-lg" asp-controller="Event" asp-action="Index">Browse All Events</a>
    </div>
</div>

<!-- Featured Events Section -->
<div class="container mt-5">
    <h2 class="text-center mb-4">Upcoming Events</h2>
    <div class="row">
        @foreach (var evt in Model.FeaturedEvents)

        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@evt.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@evt.VenueName</h6>
                        <p class="card-text">@evt.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-primary">@evt.ConferenceType</span>
                            <small class="text-muted">@evt.DateFrom.ToString("MMM dd, yyyy")</small>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a asp-controller="Event" asp-action="Details" asp-route-id="@evt.Id"
                           class="btn btn-outline-primary btn-sm">Learn More</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Featured Speakers Section -->
<div class="bg-light py-5 mt-5">
    <div class="container">
        <h2 class="text-center mb-4">Featured Speakers</h2>
        <div class="row">
            @foreach (var speaker in Model.FeaturedSpeakers)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <img src="/api/placeholder/100/100" class="rounded-circle" alt="@speaker.Name">
                            </div>
                            <h5 class="card-title">@speaker.Name</h5>
                            <p class="card-text text-muted">@speaker.EventName</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Highlights Section -->
<div class="container my-5">
    <h2 class="text-center mb-4">2024 Highlights</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="text-center">
                <div class="display-4 text-primary mb-2">50+</div>
                <h4>Events</h4>
                <p>Conferences and workshops across multiple industries</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="text-center">
                <div class="display-4 text-primary mb-2">1000+</div>
                <h4>Attendees</h4>
                <p>Professional networkers and industry leaders</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="text-center">
                <div class="display-4 text-primary mb-2">200+</div>
                <h4>Speakers</h4>
                <p>World-renowned experts and thought leaders</p>
            </div>
        </div>
    </div>
</div>

<!-- Testimonials Section -->
<div class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">What People Say</h2>
        <div class="row">
            @foreach (var testimonial in Model.Testimonials)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="mb-3">
                                <i class="fas fa-quote-left text-primary fa-2x"></i>
                            </div>
                            <p class="card-text">@testimonial.Text</p>
                            <div class="mt-3">
                                <h6 class="mb-0">@testimonial.Author</h6>
                                <small class="text-muted">@testimonial.Role</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Call to Action Section -->
<div class="container my-5 text-center">
    <div class="p-5 bg-primary bg-gradient text-white rounded">
        <h2>Ready to Join Our Next Event?</h2>
        <p class="lead">Don't miss out on the opportunity to learn from industry experts and network with professionals.</p>
        <a class="btn btn-light btn-lg" asp-controller="Account" asp-action="Register">Register Now</a>
    </div>
</div>