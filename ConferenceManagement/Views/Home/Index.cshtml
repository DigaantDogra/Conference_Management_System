@model ConferenceManagement.Models.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="relative gradient-bg text-white">
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="container mx-auto px-4 py-32 relative">
        <div class="max-w-3xl">
            <h1 class="text-5xl font-bold mb-6 leading-tight">Discover Amazing Events & Connect with Industry Leaders</h1>
            <p class="text-xl mb-8 text-gray-200">Join our conferences, workshops, and networking events to grow your skills and expand your network.</p>
            <div class="flex space-x-4">
                <a href="/Event/Create" class="bg-white text-indigo-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition duration-200">Create Event</a>
                <a href="#featured" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-indigo-600 transition duration-200">Explore Events</a>
            </div>
        </div>
    </div>
</div>

<!-- Featured Events Section -->
<section id="featured" class="container mx-auto px-4 py-16">
    <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Featured Events</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">Discover our most popular upcoming events and secure your spot today.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        @foreach (var evt in Model.FeaturedEvents)
        {
            <div class="bg-white rounded-xl overflow-hidden card-shadow hover-scale">
                <div class="aspect-w-16 aspect-h-9 bg-gradient-to-r from-blue-500 to-indigo-600 flex items-center justify-center">
                    <div class="text-white text-4xl">
                        <span>@evt.DateFrom.ToString("MMM")</span>
                        <div class="text-2xl">@evt.DateFrom.ToString("dd")</div>
                    </div>
                </div>
                <div class="p-6">
                    <div class="flex items-center mb-4">
                        <span class="px-3 py-1 bg-indigo-100 text-indigo-600 rounded-full text-sm">@evt.ConferenceType</span>
                 
                    </div>
                    <h3 class="text-xl font-bold mb-2 text-gray-800">@evt.Title</h3>
                    <p class="text-gray-600 mb-4 line-clamp-2">@evt.Description</p>
                    <a href="@Url.Action("Details", "Event", new { id = evt.Id })"
                       class="text-indigo-600 font-semibold hover:text-indigo-800 inline-flex items-center">
                        Learn More
                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                </div>
            </div>
        }
    </div>
</section>

<!-- Featured Speakers Section -->
<section class="bg-gray-100 py-16">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold mb-4">Featured Speakers</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">Learn from industry experts and thought leaders.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            @foreach (var speaker in Model.FeaturedSpeakers)
            {
                <div class="bg-white rounded-xl p-6 text-center hover-scale card-shadow">
                    <div class="w-32 h-32 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-full mx-auto mb-4 flex items-center justify-center">
                        <span class="text-white text-2xl font-bold">
                            @speaker.Name.Substring(0, 1)
                        </span>
                    </div>
                    <h3 class="font-bold text-xl mb-2">@speaker.Name</h3>
                    <p class="text-gray-600">@speaker.EventName</p>
                </div>
            }
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="container mx-auto px-4 py-16">
    <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">What People Say</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">Hear from our past attendees and speakers.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        @foreach (var testimonial in Model.Testimonials)
        {
            <div class="bg-white rounded-xl p-8 card-shadow">
                <div class="flex items-center mb-4">
                    <div class="w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center text-indigo-600 font-bold">
                        @testimonial.Author.Substring(0, 1)
                    </div>
                    <div class="ml-4">
                        <h4 class="font-bold">@testimonial.Author</h4>
                        <p class="text-gray-600 text-sm">@testimonial.Role</p>
                    </div>
                </div>
                <blockquote class="text-gray-600 italic relative">
                    <span class="text-4xl text-indigo-200 absolute -top-4 -left-2">"</span>
                    <p class="mt-2">@testimonial.Text</p>
                </blockquote>
            </div>
        }
    </div>
</section>

<!-- Highlights of the Year -->
<section class="bg-gray-100 py-16">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold mb-4">Highlights of the Year</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">A look back at our most memorable moments and achievements.</p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            @for (int i = 1; i <= 8; i++)
            {
                <div class="group relative overflow-hidden rounded-lg aspect-square bg-gradient-to-br from-indigo-500 to-purple-600 hover-scale">
                    <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-50 transition-all duration-300">
                        <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300">
                            <button class="bg-white text-indigo-600 px-4 py-2 rounded-lg font-semibold hover:bg-indigo-50">
                                View Details
                            </button>
                        </div>
                    </div>
                    <div class="h-full flex items-center justify-center text-white">
                        <span class="text-lg font-bold">2024</span>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="container mx-auto px-4 py-16">
    <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl overflow-hidden">
        <div class="container mx-auto px-4 py-16">
            <div class="max-w-3xl mx-auto text-center text-white">
                <h2 class="text-3xl font-bold mb-6">Ready to Host Your Next Event?</h2>
                <p class="text-xl mb-8 opacity-90">Join our platform and connect with thousands of attendees worldwide.</p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="/Event/Create" class="bg-white text-indigo-600 px-8 py-3 rounded-lg font-semibold hover:bg-indigo-50 transition duration-300">
                        Create Event
                    </a>
                    <a href="#" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-indigo-600 transition duration-300">
                        Learn More
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="text-center">
            <div class="text-4xl font-bold text-indigo-600 mb-2">1000+</div>
            <div class="text-gray-600">Events Hosted</div>
        </div>
        <div class="text-center">
            <div class="text-4xl font-bold text-indigo-600 mb-2">50k+</div>
            <div class="text-gray-600">Attendees</div>
        </div>
        <div class="text-center">
            <div class="text-4xl font-bold text-indigo-600 mb-2">100+</div>
            <div class="text-gray-600">Venues</div>
        </div>
        <div class="text-center">
            <div class="text-4xl font-bold text-indigo-600 mb-2">4.9</div>
            <div class="text-gray-600">Average Rating</div>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="bg-gray-100 py-16">
    <div class="container mx-auto px-4">
        <div class="max-w-xl mx-auto text-center">
            <h2 class="text-3xl font-bold mb-4">Stay Updated</h2>
            <p class="text-gray-600 mb-8">Subscribe to our newsletter for the latest events and updates.</p>
            <form class="flex flex-col sm:flex-row gap-4">
                <input type="email" placeholder="Enter your email"
                       class="flex-1 px-4 py-3 rounded-lg border focus:outline-none focus:ring-2 focus:ring-indigo-500">
                <button type="submit"
                        class="bg-indigo-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition duration-300">
                    Subscribe
                </button>
            </form>
        </div>
    </div>
</section>