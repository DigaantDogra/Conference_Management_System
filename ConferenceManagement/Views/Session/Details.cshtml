@model ConferenceManagement.Models.Session

@{
    ViewData["Title"] = "Session Details";
}

<div class="container">
    <h1 class="mb-4">Session Details</h1>

    <div class="card">
        <div class="card-body">
            <h2 class="card-title">@Model.SessionTitle</h2>
            <p class="card-text">@Model.Description</p>

            <dl class="row">
                <dt class="col-sm-3">Session Type</dt>
                <dd class="col-sm-9">@Model.SessionType</dd>

                <dt class="col-sm-3">Start Time</dt>
                <dd class="col-sm-9">@Model.StartTime.ToString("g")</dd>

                <dt class="col-sm-3">Duration</dt>
                <dd class="col-sm-9">@Model.Duration hours</dd>

                <dt class="col-sm-3">Format</dt>
                <dd class="col-sm-9">@(Model.IsOnline ? "Online" : "In-Person")</dd>

                <dt class="col-sm-3">Exclusive</dt>
                <dd class="col-sm-9">@(Model.IsExclusive ? "Yes" : "No")</dd>
            </dl>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>