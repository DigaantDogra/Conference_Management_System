@model ConferenceManagement.Models.Session

@{
    ViewData["Title"] = "Session Details";
}

<div class="bg-gradient-to-r from-purple-600 to-indigo-700 text-white">
    <div class="container mx-auto px-4 py-12">
        <div class="max-w-4xl">
            <h1 class="text-3xl font-bold mb-2">@Model.SessionTitle</h1>
            <p class="text-xl opacity-90">@Model.Description</p>
        </div>
    </div>
</div>

<div class="container mx-auto px-4 py-8">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-4">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">Session Information</h3>
                        <div class="bg-gray-50 rounded-lg p-4 space-y-3">
                            <div class="flex items-center text-gray-700">
                                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <div>
                                    <span class="text-sm text-gray-500">Start Time</span><br />
                                    <span class="font-medium">@Model.StartTime.ToString("MMM dd, yyyy HH:mm")</span>
                                </div>
                            </div>
                            <div class="flex items-center text-gray-700">
                                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <div>
                                    <span class="text-sm text-gray-500">Duration</span><br />
                                    <span class="font-medium">@Model.Duration hours</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="space-y-4">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">Session Details</h3>
                        <div class="bg-gray-50 rounded-lg p-4 space-y-3">
                            <div class="flex items-center">
                                <span class="px-3 py-1 bg-indigo-100 text-indigo-600 rounded-full text-sm">
                                    @Model.SessionType
                                </span>
                                @if (Model.IsExclusive)
                                {
                                    <span class="ml-2 px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-sm"> Exclusive </span>
                                }

                                <span class="ml-2 px-3 py-1 @(Model.IsOnline ? "bg-green-100 text-green-800" : "bg-blue-100 text-blue-800") rounded-full text-sm">
                                    @(Model.IsOnline ? "Online" : "In-Person")
                                </span>
                            </div>

                            <div class="flex items-center text-gray-700">
                                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                </svg>
                                <div>
                                    <span class="text-sm text-gray-500">Event</span><br />
                                    <span class="font-medium">@(Model.Event?.Title ?? "N/A")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-8 flex space-x-4">
                <a href="@Url.Action("Edit", "Session", new { id = Model.Id })"
                   class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition duration-300">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Edit Session
                </a>
                <a href="@Url.Action("Index", "Session")"
                   class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition duration-300">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>