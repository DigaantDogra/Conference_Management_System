@model ConferenceManagement.Models.Session
@{
    ViewData["Title"] = "Session Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">@Model.SessionTitle</h3>
            <span class="badge bg-light text-primary">@Model.SessionType</span>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Start Time</dt>
                        <dd class="col-sm-9">@Model.StartTime.ToString("f")</dd>

                        <dt class="col-sm-3">Duration</dt>
                        <dd class="col-sm-9">@Model.Duration hours</dd>

                        <dt class="col-sm-3">Event</dt>
                        <dd class="col-sm-9">@ViewBag.EventTitle</dd>

                        <dt class="col-sm-3">Session Type</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Model.SessionType</span>
                        </dd>

                        <dt class="col-sm-3">Mode</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsOnline)

                            {
                                <span class="badge bg-success">Online Session</span>
                            }

                            else

                            {
                                <span class="badge bg-primary">In-Person Session</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Access Level</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsExclusive)

                            {
                                <span class="badge bg-warning">Exclusive Session</span>
                            }

                            else

                            {
                                <span class="badge bg-success">Open Session</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Quick Info</h5>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fas fa-clock text-primary me-2"></i>
                                    Duration: @Model.Duration hours
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-calendar text-primary me-2"></i>
                                    @Model.StartTime.ToString("D")
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-clock text-primary me-2"></i>
                                    @Model.StartTime.ToString("t")
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            @if (!Model.IsOnline)
            {
                <button class="btn btn-success float-end" onclick="showLocationMap()">View Location</button>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showLocationMap() {
            // Implement map functionality if needed
            alert('Location map feature will be implemented here');
        }
    </script>
}