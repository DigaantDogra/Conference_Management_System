@model IEnumerable<ConferenceManagement.Models.Session>
@{
    ViewData["Title"] = "Sessions";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Sessions</h1>
        <a asp-action="Create" class="btn btn-primary">Create New Session</a>
    </div>

    <div class="row">
        @foreach (var session in Model)

        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@session.SessionTitle</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@session.SessionType</h6>
                        <p class="card-text">@session.Description</p>
                        <ul class="list-unstyled">
                            <li><strong>Start Time:</strong> @session.StartTime.ToString("f")</li>
                            <li><strong>Duration:</strong> @session.Duration hours</li>
                            <li><strong>Type:</strong> @(session.IsOnline ? "Online" : "In-Person")</li>
                            @if (session.IsExclusive)

                            {
                                <li><span class="badge bg-warning">Exclusive Session</span></li>
                            }
                        </ul>
                        <div class="mt-3">
                            <a asp-action="Details" asp-route-id="@session.Id" class="btn btn-info">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>