@model ConferenceManagement.Models.Event

@{
    ViewData["Title"] = "Create Event";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create New Event</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DateFrom" class="form-label"></label>
                            <input asp-for="DateFrom" class="form-control" type="date" />
                            <span asp-validation-for="DateFrom" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DateTo" class="form-label"></label>
                            <input asp-for="DateTo" class="form-control" type="date" />
                            <span asp-validation-for="DateTo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ConferenceType" class="form-label"></label>
                            <select asp-for="ConferenceType" asp-items="ViewBag.ConferenceTypes" class="form-select">
                                <option value="">Select Conference Type</option>
                            </select>
                            <span asp-validation-for="ConferenceType" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="VenueId" class="form-label">Venue</label>
                            <select asp-for="VenueId" asp-items="ViewBag.Venues" class="form-select">
                                <option value="">Select Venue</option>
                            </select>
                            <span asp-validation-for="VenueId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AttendeeLimit" class="form-label"></label>
                            <input asp-for="AttendeeLimit" class="form-control" type="number" min="1" max="10000" />
                            <span asp-validation-for="AttendeeLimit" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Fee" class="form-label"></label>
                            <input asp-for="Fee" class="form-control" type="number" step="0.01" min="0" max="10000" />
                            <span asp-validation-for="Fee" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}