@model ConferenceManagement.Models.Event

@{
    ViewData["Title"] = "Create Event";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Create New Event</h2>
    <form  method="post" class="p-5 border rounded shadow-lg bg-light">
        <!-- Event Title -->
        <div class="form-group mb-4">
            <label asp-for="Title" class="form-label font-weight-bold">Event Title</label>
            <input asp-for="Title" class="form-control rounded" placeholder="Enter event title" required />
            <span asp-validation-for="Title" class="text-danger small"></span>
        </div>

        <!-- Description -->
        <div class="form-group mb-4">
            <label asp-for="Description" class="form-label font-weight-bold">Description</label>
            <textarea asp-for="Description" class="form-control rounded" placeholder="Enter event description" rows="3" required></textarea>
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>

        <!-- Start Date -->
        <div class="form-group mb-4">
            <label asp-for="DateFrom" class="form-label font-weight-bold">Start Date</label>
            <input asp-for="DateFrom" type="date" class="form-control rounded" required />
            <span asp-validation-for="DateFrom" class="text-danger small"></span>
        </div>

        <!-- End Date -->
        <div class="form-group mb-4">
            <label asp-for="DateTo" class="form-label font-weight-bold">End Date</label>
            <input asp-for="DateTo" type="date" class="form-control rounded" required />
            <span asp-validation-for="DateTo" class="text-danger small"></span>
        </div>

        <!-- Conference Type -->
        <div class="form-group mb-4">
            <label asp-for="ConferenceType" class="form-label font-weight-bold">Conference Type</label>
            <select asp-for="ConferenceType" class="form-select rounded" required>
                <option value="" disabled selected>Select Type</option>
                @foreach (var type in Enum.GetValues(typeof(ConferenceManagement.Models.ConferenceType)))
                {
                    <option value="@type">@type</option>
                }
            </select>
            <span asp-validation-for="ConferenceType" class="text-danger small"></span>
        </div>

        <!-- Venue -->
        <div class="form-group mb-4">
            <label asp-for="VenueId" class="form-label font-weight-bold">Venue</label>
            <select asp-for="VenueId" class="form-select rounded" required>
                <option value="" disabled selected>Select Venue</option>
                @foreach (var venue in ViewBag.Venues)
                {
                    <option value="@venue.Id">@venue.Address</option>
                }
            </select>
            <span asp-validation-for="VenueId" class="text-danger small"></span>
        </div>

        <!-- Attendee Limit -->
        <div class="form-group mb-4">
            <label asp-for="AttendeeLimit" class="form-label font-weight-bold">Attendee Limit</label>
            <input asp-for="AttendeeLimit" type="number" class="form-control rounded" placeholder="Enter attendee limit" min="1" required />
            <span asp-validation-for="AttendeeLimit" class="text-danger small"></span>
        </div>

        <!-- Event Fee -->
        <div class="form-group mb-4">
            <label asp-for="Fee" class="form-label font-weight-bold">Event Fee</label>
            <input asp-for="Fee" type="number" step="0.01" class="form-control rounded" placeholder="Enter fee" min="0" required />
            <span asp-validation-for="Fee" class="text-danger small"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary btn-block rounded py-2 font-weight-bold">Create Event</button>
    </form>
</div>
